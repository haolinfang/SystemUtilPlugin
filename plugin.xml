<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-system-util" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SystemUtilPlugin</name>
    <js-module name="SystemUtilPlugin" src="www/SystemUtilPlugin.js">
        <clobbers target="SystemUtilPlugin" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SystemUtilPlugin">
                <param name="android-package" value="cordova.plugins.SystemUtilPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <!-- 主插件类 -->
        <source-file src="src/android/java/SystemUtilPlugin.java" target-dir="src/cordova/plugins" />
        
        <source-file src="src/android/java/KeyStore.java" target-dir="src/com/plugin/keystore" />

        <!-- AES 加解密工具类 -->
        <source-file src="src/android/java/AESUtil.java" target-dir="src/cordova/plugins" />
        
        <!-- MD5 计算工具类 -->
        <source-file src="src/android/java/MD5Util.java" target-dir="src/cordova/plugins" />
        
        <!-- RSA 加密工具类 -->
        <source-file src="src/android/java/RSAUtil.java" target-dir="src/cordova/plugins" />
        
        <!-- SM3 哈希工具类 -->
        <source-file src="src/android/java/SM3Util.java" target-dir="src/cordova/plugins" />
        
        <!-- SM2 加密工具类 -->
        <source-file src="src/android/java/SM2Util.java" target-dir="src/cordova/plugins" />
        
        <!-- SharedPreferences 工具类 -->
        <source-file src="src/android/java/SharedPrefsUtil.java" target-dir="src/cordova/plugins" />
        
        <!-- 添加so文件 -->
        <source-file src="src/android/libs/armeabi-v7a/libkeystore.so" target-dir="app/libs/armeabi-v7a" />
        <source-file src="src/android/libs/arm64-v8a/libkeystore.so" target-dir="app/libs/arm64-v8a" />
        <source-file src="src/android/libs/x86/libkeystore.so" target-dir="app/libs/x86" />
        <source-file src="src/android/libs/x86_64/libkeystore.so" target-dir="app/libs/x86_64" />
    </platform>
    
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="SystemUtilPlugin">
                <param name="ios-package" value="SystemUtilPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <!-- 主插件类 -->
        <header-file src="src/ios/oc/SystemUtilPlugin.h" />
        <source-file src="src/ios/oc/SystemUtilPlugin.m" />
        
        <!-- AES 加解密工具类 -->
        <header-file src="src/ios/oc/AESUtil.h" />
        <source-file src="src/ios/oc/AESUtil.m" />
        
        <!-- MD5 计算工具类 -->
        <header-file src="src/ios/oc/MD5Util.h" />
        <source-file src="src/ios/oc/MD5Util.m" />
        
        <!-- RSA 加密工具类 -->
        <header-file src="src/ios/oc/RSAUtil.h" />
        <source-file src="src/ios/oc/RSAUtil.m" />
        
        <!-- SM3 哈希工具类 -->
        <header-file src="src/ios/oc/SM3Util.h" />
        <source-file src="src/ios/oc/SM3Util.m" />
        
        <!-- SM2 加密工具类 -->
        <header-file src="src/ios/oc/SM2Util.h" />
        <source-file src="src/ios/oc/SM2Util.m" />
        
        <!-- 存储工具类 -->
        <header-file src="src/ios/oc/StorageUtil.h" />
        <source-file src="src/ios/oc/StorageUtil.m" />
        
        <!-- GMObjC 国密算法库 -->
        <header-file src="src/ios/lib/GMObjC/GMObjC.h" />
        <header-file src="src/ios/lib/GMObjC/GMSm2Utils.h" />
        <source-file src="src/ios/lib/GMObjC/GMSm2Utils.m" />
        <header-file src="src/ios/lib/GMObjC/GMSm3Utils.h" />
        <source-file src="src/ios/lib/GMObjC/GMSm3Utils.m" />
        <header-file src="src/ios/lib/GMObjC/GMSm4Utils.h" />
        <source-file src="src/ios/lib/GMObjC/GMSm4Utils.m" />
        
        <!-- 系统框架 -->
        <framework src="libz.tbd" />
        <framework src="libc++.tbd" />
        <framework src="Security.framework" />
        <framework src="CoreFoundation.framework" />
        <framework src="Foundation.framework" />
        <framework src="UIKit.framework" />
    </platform>
</plugin>