<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-system-util" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SystemUtilPlugin</name>
    <js-module name="SystemUtilPlugin" src="www/SystemUtilPlugin.js">
        <clobbers target="SystemUtilPlugin" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SystemUtilPlugin">
                <param name="android-package" value="cordova.plugins.SystemUtilPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <!-- 主插件类 -->
        <source-file src="src/android/java/SystemUtilPlugin.java" target-dir="src/cordova/plugins" />
        
        <source-file src="src/android/java/KeyStore.java" target-dir="src/com/plugin/keystore" />

        <!-- AES 加解密工具类 -->
        <source-file src="src/android/java/AESUtil.java" target-dir="src/cordova/plugins" />
        
        <!-- MD5 计算工具类 -->
        <source-file src="src/android/java/MD5Util.java" target-dir="src/cordova/plugins" />
        
        <!-- RSA 加密工具类 -->
        <source-file src="src/android/java/RSAUtil.java" target-dir="src/cordova/plugins" />
        
        <!-- SharedPreferences 工具类 -->
        <source-file src="src/android/java/SharedPrefsUtil.java" target-dir="src/cordova/plugins" />
        
        <!-- 添加 .so 文件 -->
        <source-file src="src/android/libs/armeabi-v7a/libkeystore.so" target-dir="libs/armeabi-v7a" />
        <source-file src="src/android/libs/arm64-v8a/libkeystore.so" target-dir="libs/arm64-v8a" />
        <source-file src="src/android/libs/x86/libkeystore.so" target-dir="libs/x86" />
        <source-file src="src/android/libs/x86_64/libkeystore.so" target-dir="libs/x86_64" />
    </platform>
    
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="SystemUtilPlugin">
                <param name="ios-package" value="SystemUtilPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        
        <!-- 主插件类 -->
        <header-file src="src/ios/SystemUtilPlugin.h" />
        <source-file src="src/ios/SystemUtilPlugin.m" />
        
        <!-- AES 加解密工具类 -->
        <header-file src="src/ios/AESUtil.h" />
        <source-file src="src/ios/AESUtil.m" />
        
        <!-- MD5 计算工具类 -->
        <header-file src="src/ios/MD5Util.h" />
        <source-file src="src/ios/MD5Util.m" />
        
        <!-- RSA 加密工具类 -->
        <header-file src="src/ios/RSAUtil.h" />
        <source-file src="src/ios/RSAUtil.m" />
        
        <!-- 存储工具类 -->
        <header-file src="src/ios/StorageUtil.h" />
        <source-file src="src/ios/StorageUtil.m" />
        
        <!-- 系统框架 -->
        <framework src="Security.framework" />
        <framework src="CoreFoundation.framework" />
    </platform>
</plugin>